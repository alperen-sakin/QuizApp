<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="288dp"
            android:height="288dp"
            android:viewportWidth="288"
            android:viewportHeight="288">
            <group
                android:name="group_1"
                android:pivotX="144"
                android:pivotY="144"
                android:scaleX="0.85"
                android:scaleY="0.85">
                <path
                    android:name="path"
                    android:pathData="M 104.354 194.467 L 95.931 211 L 77 211 L 92.631 179.476 L 104.354 194.467 Z"
                    android:fillColor="#49657a"
                    android:strokeWidth="1"/>
                <path
                    android:name="path_1"
                    android:pathData="M 211 211 L 192.069 211 L 166.23 161.788 L 178.026 145.595 L 211 211 Z"
                    android:fillColor="#b4e3df"
                    android:strokeWidth="1"/>
                <path
                    android:name="path_2"
                    android:pathData="M 114.062 175.552 L 109.608 184.218 L 97.779 169.093 L 102.009 160.563 L 114.062 175.552 Z M 163.084 115.958 L 151.003 132.785 L 143.443 118.389 L 119.292 165.377 L 107.125 150.246 L 143.443 77 L 163.084 115.958 Z M 172.737 135.104 L 160.814 151.472 L 156.438 143.137 L 168.392 126.486 L 172.737 135.104 Z"
                    android:fillColor="#49657a"
                    android:strokeWidth="1"/>
                <path
